@model IEnumerable<proje.Models.Entities.unite>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ünite Listesi</h2>

<p>
    @Html.ActionLink("Yeni Birim Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Unite)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Unite)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detay", "Details", new { id=item.id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
